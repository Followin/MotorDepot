@model MotorDepot.WEB.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
}

<div class="paper-block">
    @using (Html.BeginForm("Login", "Account"))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        
        <div class="form-group">
            @Html.LabelFor(x => x.Login)
            @Html.EditorFor(x => x.Login)
            @Html.ValidationMessageFor(x => x.Login)
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Password)
            @Html.EditorFor(x => x.Password)
            @Html.ValidationMessageFor(x => x.Password)
        </div>

        <div class="form-group">
            @Html.EditorFor(x => x.Persistent)
            @Html.LabelFor(x => x.Persistent)
            @Html.ValidationMessageFor(x => x.Persistent)
        </div>
        
        <div class="form-buttons">
            <input type="submit" class="action-button next" value="Войти"/>
        </div>
    }
</div>

@section scripts{
    @Scripts.Render("~/Scripts/formScripts")
}
